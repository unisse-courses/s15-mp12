<div class="post w-75 current-black py-4 center">
        <div class="row">
            <p class="col-lg-10">
                <span class="user"></span><a href="/user={{author.id}}">{{author.name}}</a> | <i>{{date}}  </i>
                <span id="follow" class="icon post_icon"></span>
            </p>
            <p class="col-lg-2"><span id="cook" class="icon post_icon"></span><span id="bookmark" class="icon post_icon"></span></p>
        </div>
        <div class="row">
            <div class="col-lg-5">
                <p class="col-lg-12"><img src="img/recipe_{{id}}.jpg" alt="{{name}}">
            </div>
            <div class="col-lg-7">
                <h1 class="text-orange">{{name}}</h1>
                <p>Description here.
                    <p><a href="/user={{author.id}}/recipe={{id}}">View full recipe.</a></p>
            </div>
        </div>
</div>