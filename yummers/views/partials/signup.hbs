<div class="row mt-3">
    <div class="col-xl-2"></div> 
    <div class="col-xl-8 mt-2"> 
        <input id="signupUsername" class="form-control" type="text" placeholder="Username"/>  
    </div> 
</div> 
<div class="row mt-2">
    <div class="col-xl-2"></div> 
    <div class="col-xl-8 mt-2"> 
        <input id="signupName" class="form-control" type="text" placeholder="Full Name"/>  
    </div> 
</div> 
<div class="row mt-2"> 
    <div class="col-xl-2"></div> 
    <div class="col-xl-8 mt-2"> 
         <input id="signupEmail" class="form-control" type="text" placeholder="Email Address"/>  
    </div>
</div>  
<div class="row mt-2">  
    <div class="col-xl-2"></div>  
    <div class="col-xl-8 mt-2"> 
        <input id="signupPass" class="form-control" type="password" placeholder="Password"/> 
    </div> 
</div> 
<div class="row mt-2">  
    <div class="col-xl-2"></div>  
    <div class="col-xl-8 mt-2"> 
        <input id="confirmPass" class="form-control" type="password" placeholder="Confirm Password"/> 
    </div> 
</div> 
<div class="row my-2">
    <div id="errorMessage" class="col-xl-4"></div>
</div>
<div class="row mt-2">  
    <div class="col-xl-5"></div>
    <div class="col-xl-2 mt-4"> 
        <button id="btnSignup" class="btn btn-secondary" type="button">Sign up</button>  
    </div>
</div>